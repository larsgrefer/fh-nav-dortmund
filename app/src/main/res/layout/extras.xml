<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/basicbackground">

<LinearLayout android:layout_width="fill_parent" android:background="@drawable/ic_tab_template"
		android:layout_height="40dip" android:orientation="horizontal">
		<TextView android:layout_height="35dip" android:textColor="#FF6000"
			android:text="@string/extras_button1b" android:layout_weight="0"
			android:paddingTop="5dip" android:paddingLeft="10dip"
			 android:textSize="20dip"
			android:layout_width="120dip" />
		<Spinner android:id="@+id/spinner1" android:layout_width="168dip"
			android:layout_height="40dip" android:layout_marginTop="2dip"></Spinner>
				<ImageButton android:id="@+id/mensa_refresh"
				android:src="@drawable/ic_menu_refresh" android:background="@drawable/android_button"
				android:layout_height="36dip" android:layout_width="32dip" android:layout_weight="0" android:layout_gravity="center_horizontal"></ImageButton>
			
	</LinearLayout>


	<ListView android:layout_height="wrap_content"
		 android:layout_weight="1"
		android:layout_width="match_parent" android:id="@+id/listView1"
		android:cacheColorHint="#00000000"></ListView>
	<TextView android:id="@+id/empty" android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:layout_weight="1" android:gravity="center" android:text="@string/empty_list"
		android:textColor="#FF6000" />
	<LinearLayout android:id="@+id/linearLayout3"
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:layout_weight="0" android:layout_gravity="bottom">
		
		<Button android:id="@+id/Button01"
			android:text="@string/extras_button1a" android:drawableTop="@android:drawable/ic_menu_info_details"
			android:background="@drawable/android_button" android:layout_height="69dip"
			android:layout_width="50dip" android:layout_weight="1"
			android:layout_gravity="bottom"></Button>
		<Button android:id="@+id/Button02" android:text="@string/extras_button2"
			android:drawableTop="@android:drawable/ic_menu_directions"
			android:background="@drawable/android_button" android:layout_height="69dip"
			android:layout_width="50dip" android:layout_weight="1"
			android:layout_gravity="bottom"></Button>
		<Button android:id="@+id/Button03" android:text="@string/extras_button3"
			android:drawableTop="@android:drawable/ic_menu_revert"
			android:background="@drawable/android_button" android:layout_height="69dip"
			android:layout_width="50dip" android:layout_weight="1"
			android:layout_gravity="bottom"></Button>
			
			
	</LinearLayout>

</LinearLayout>