<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_root" android:layout_width="match_parent"
	android:layout_height="match_parent" android:orientation="vertical">
	<TextView android:id="@+id/header_calendar"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="20dip" android:text="Kalender:"
		android:layout_margin="10dip" />
	<Spinner android:id="@+id/calendarSpinner"
		android:layout_height="50dip" android:layout_x="20dip"
		android:layout_margin="10dip"
		android:layout_y="180dip" android:layout_gravity="center_horizontal"
		android:layout_width="match_parent"></Spinner>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView 
			android:layout_width="50dip" android:textSize="20dip"
			android:text="Von:" android:layout_marginLeft="10dip"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" />
		<TextView android:id="@+id/dateDisplayFrom"
			android:layout_width="110dip" android:textSize="20dip"
			android:text="27.12.2011" android:layout_marginLeft="5dip"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" />
		<Button android:id="@+id/pickDateFrom" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Change"
			android:layout_weight="1" android:layout_marginRight="10dip"
			android:layout_marginTop="10dip" />
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:baselineAligned="true">
		<TextView 
			android:layout_width="50dip" android:textSize="20dip"
			android:text="Bis:" android:layout_marginLeft="10dip"
			android:layout_weight="1" android:layout_height="wrap_content"
			android:layout_gravity="center_vertical" />
		<TextView android:id="@+id/dateDisplayTo" android:textSize="20dip"
			android:layout_width="110dip" android:layout_height="wrap_content"
			android:text="27.12.2011" android:layout_marginLeft="5dip"
			android:layout_weight="1" android:layout_gravity="center_vertical" />
		<Button android:id="@+id/pickDateTo" android:layout_height="wrap_content"
			android:text="Change" android:layout_gravity="top"
			android:layout_width="wrap_content" android:layout_weight="1"
			android:layout_marginRight="10dip" android:layout_marginTop="10dip" />
	</LinearLayout>
</LinearLayout>
