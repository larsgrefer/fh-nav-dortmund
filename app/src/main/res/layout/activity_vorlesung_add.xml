<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:background="@drawable/basicbackground">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:background="@drawable/ic_tab_template" android:layout_width="match_parent"
		android:layout_height="75dip" android:orientation="vertical">

		<TextView android:layout_height="35dip" android:textColor="#FF6000"
			android:text="@string/add_vorlesung_title" android:layout_weight="0"
			android:paddingTop="5dip" android:paddingLeft="10dip"
			android:background="@drawable/ic_tab_template" android:textSize="20dip"
			android:layout_width="match_parent" />

		<LinearLayout android:layout_height="40dip"
			android:layout_width="match_parent" android:layout_weight="0"
			android:orientation="horizontal">

			<Spinner android:id="@+id/Spinner01" android:layout_width="fill_parent"
				android:layout_weight="1"
				android:layout_gravity="center_vertical" android:prompt="@string/addvorlesung_spinner_text" android:layout_height="match_parent">
			</Spinner>
			<ImageButton android:id="@+id/addveranstaltung_refresh"
				android:src="@drawable/ic_menu_refresh" android:background="@drawable/android_button"
				android:layout_height="35dip" android:layout_width="32dip" android:layout_weight="0" android:layout_gravity="center_horizontal"></ImageButton>

		</LinearLayout>
	</LinearLayout>
	<ListView android:layout_height="wrap_content"
		android:layout_weight="1" android:layout_width="match_parent"
		android:id="@+id/addvorlesung_list" 
		android:cacheColorHint="#00000000"></ListView>

	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:layout_weight="0"
		android:layout_gravity="bottom" android:orientation="horizontal">

		<Button android:layout_weight="1" android:layout_width="50dip"
			android:text="@string/button_add_label" android:drawableTop="@android:drawable/ic_menu_add"
			android:layout_height="69dip" android:id="@+id/addveranstaltung_add"
			android:layout_gravity="bottom" android:background="@drawable/android_button"></Button>
					<Button android:id="@+id/addveranstaltung_select_all"
			android:text="@string/button_select_all_label" android:drawableTop="@android:drawable/ic_menu_agenda"
			android:background="@drawable/android_button" android:layout_height="69dip"
			android:layout_width="50dip" android:layout_weight="1"
			android:layout_gravity="bottom"></Button>
		<Button android:layout_weight="1" android:layout_width="50dip"
			android:text="@string/button_back_label" android:drawableTop="@android:drawable/ic_menu_revert"
			android:layout_height="69dip" android:id="@+id/addveranstaltung_back"
			android:layout_gravity="bottom" android:background="@drawable/android_button"></Button>

	</LinearLayout>
</LinearLayout>
